<div class="quiz_container">

	<div class="quiz_row">
		<h1>Quiz for <%= @quiz.label %> </h1>
	</div>

	<div class="quiz_row">

		<div class="questions">

			<%= form_tag("/answers", method: "post") do %>
  		<%= label_tag(:q, "Search for:") %>
  		<%= text_field_tag(:q) %>
  		<%= submit_tag("Search") %>
			
			<% end %>

			<h3><%= @quiz.question_1 %></h3>

			<h3><%= @quiz.question_2 %></h3>

			<h3><%= @quiz.question_3 %></h3>

			<h3><%= @quiz.question_4 %></h3>

		</div>

	</div>

</div>